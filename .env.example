# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Default timezone for scheduling
DEFAULT_TZ=Asia/Kolkata

# Fact-checking provider: duckduckgo | wikipedia | serpapi
FACTCHECK_PROVIDER=duckduckgo

# SerpAPI key (optional, only needed if FACTCHECK_PROVIDER=serpapi)
SERPAPI_API_KEY=your_serpapi_key_here

# Wikipedia language code
WIKIPEDIA_LANG=en

# Organization name for mentions
ORG_NAME=Acme

# Compliance mode: standard | strict
COMPLIANCE_MODE=standard
